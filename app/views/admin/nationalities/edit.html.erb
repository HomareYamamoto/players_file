<%= flash[:notice] %>
<div class='container px-5 px-mt-5'>
  <div class="row p-1 mt-5">
    <h3>国名編集</h3>
  </div>
  <div class="row p-1 mt-5">
    <%= form_with(model: @nationality, url: admin_nationality_path(@nationality), method: :patch, class: 'form-group') do |f| %>
      <table cellpadding="10">
        <tr valign="top">
          <td>
            <%= f.label :name, "国名", class: 'form-label' %>
          </td>
          <td>
          </td>
          <td>
            <%= f.text_field :name, class: 'form-control', placeholder: '国名を入力してください' %>
          </td>
          <td>
            <%= f.submit "変更を保存する", class: 'btn btn-success' %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
