<% if @nationality.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @nationality.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= flash[:notice] %>
<div class='container px-5 px-mt-5'>
  <h4>国名一覧・追加</h4>

  <div class="row ml-md-5">
    <b>国名</b>
    </div>
  <%= form_with(model: @nationality, url: admin_nationalities_path, class: 'form-group') do |f| %>
  <div class = "row ml-4">
  <div class="col-4">
    <div class="input-group mb-3">
      <%= f.text_field :name, class: 'form-control', placeholder: '国名' %>
    </div>
  </div>
  <div class="col-2">
    <div class="input-group-append">
       <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  </div>
  </div>
    <% end %>
</div>

<div class='container'>
  <div class="row  ml-5">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr class="pl-5 table-warning">
            <th><b>国名</b></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @nationalities.each do |nationality| %>
            <tr>
              <td><%= nationality.name %></td>
              <td><%= link_to '編集する', edit_admin_nationality_path(nationality), class: 'btn btn-success' %></td>
              <td><%= link_to '削除する', edit_admin_nationality_path(nationality), class: 'btn btn-danger', method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
