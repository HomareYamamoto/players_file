<div class="container">
  <div class="row">
    <h1><strong><%= @nationality.name %>　一覧</strong></h1>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>User</th>
          <th>PLAYERS</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @nationality_post_players.each do |post_player| %>
        <tr>
          <td><%= link_to post_player.user.name, admin_user_path(post_player.user.id) %></td>
          <td><%= post_player.name %></td>
          <td><%= link_to "show", admin_post_player_path(post_player.id) %></td>
        </tr>
        <% end %>
        <%= paginate @nationality_post_players %>
      </tbody>
    </table>
  </div>
</div>