<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="container">
    <div class="row">
      <%= form_with model: [:admin, @user], local: true , class: 'col-5 mx-auto my-5' do |f| %>
      <div class="row form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control user_name' %>
      </div>

      <div class="row form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.text_area :email, class: 'form-control user_email' %>
      </div>

      <div class="row form-group">
      <%= f.label :is_active, '会員ステータス' %>
        <div class="col-sm-9">
          <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :is_active, true, checked: @user.is_active == true, class: 'custom-control-input', id: 'status-active' %>
          <%= f.label :is_active, '有効', class: 'custom-control-label', for: 'status-active' %>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :is_active, false, checked: @user.is_active == false, class: 'custom-control-input', id: 'status-deleted' %>
          <%= f.label :is_active, '退会', class: 'custom-control-label', for: 'status-deleted' %>
          </div>
        </div>
      </div>

      <div class="row form-group">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
</div>
