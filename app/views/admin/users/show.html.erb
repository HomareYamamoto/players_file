<div>
  <%= flash[:notice] %>
</div>


<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">Profile</h2>
      <table class='table'>
        <tr>
      	  <th>Name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>follow</th>
          <th><%= "#{@user.followings.count}" %></th>
          <!--管理者側にフォロー・フォロワー機能一覧は不要-->
        </tr>
        <tr>
          <th>follower</th>
          <th><%= "#{@user.followers.count}" %></th>
          <!--管理者側にフォロー・フォロワー機能一覧は不要-->
        </tr>
      </table>
      <div class="row">
          <%= link_to "Profile edit", edit_admin_user_path(@user.id), class: 'btn btn-success' %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="row">
        <h2 class="mt-3">PLAYERS</h2>
      </div>
      <%= render 'admin/users/index',post_players: @post_players %>
        <!--共通テンプレート作成し、投稿者の投稿のみを一覧表示-->
    </div>
  </div>
</div>