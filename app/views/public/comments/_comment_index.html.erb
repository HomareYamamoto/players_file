<% post_player.comments.each do |comment| %>
<tr>
  <td><%= link_to comment.user.name, public_user_path(comment.user.id) %></td>
  <td><%= comment.body %></td>
  <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
  <% if comment.user == current_user %>
  <th><%= link_to "Delete", public_post_player_comment_path(comment.post_player, comment), method: :delete, data: {confirm: "削除しますか？"}, method: :delete, class: 'btn btn-danger', remote: true %></th>
  <% else %>
  <th></th>
  <% end %>
</tr>
<% end %>