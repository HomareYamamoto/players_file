<div class="container">
  <div class="row">
    <div>
      <h1 class="my-3"><strong>PLAYERS</strong></h1>
    </div>
    <div class="my-4 col-md-4 offset-6">
      <%= link_to "Add a player", new_public_post_player_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>User</th>
          <th>Player Name</th>
          <th>Nationality</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @post_players.each do |post_player| %>
          <tr>
            <td><%= link_to post_player.user.name, public_user_path(post_player.user_id) %></td>
            <td><%= link_to post_player.name, public_post_player_path(post_player.id) %></td>
            <td><%= post_player.nationality.name %></td>
            <td colspan="3"></td>
            <!--<td id="favorite_btn_<%#= book.id %>"><%#= render 'favorites/favorite-btn', book: book %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div