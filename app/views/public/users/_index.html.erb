<div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-primary">
          <th><i class="fa-solid fa-users"></i>User</th>
          <th><i class="fa-regular fa-file-lines"></i>Player Name</th>
          <th><i class="fa-regular fa-flag"></i>Nationality</th>
          <th><i class="fa-regular fa-thumbs-up"></i></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% post_players.each do |post_player| %>
          <tr>
            <td><%= link_to post_player.user.name, public_user_path(post_player.user_id) %></td>
            <td><%= link_to post_player.name, public_post_player_path(post_player.id) %></td>
            <td><%= post_player.nationality.name %></td>

            <!--<td id="favorite_btn_<%#= book.id %>"><%#= render 'favorites/favorite-btn', book: book %></td>-->
            <td id="favorite_<%= post_player.id %>">
              <%= render 'public/favorites/favorite', post_player: post_player %>
            </td>
            <% if post_player.user == current_user %>
            <td><%= link_to edit_public_post_player_path(post_player.id) do %><i class="fa-regular fa-pen-to-square"></i><% end %></td>
            <td><%= link_to "Delete", public_post_player_path(post_player.id), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} %></td>
            <% else %>
            <td colspan="2"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto"><%= paginate post_players %></div>
</div>