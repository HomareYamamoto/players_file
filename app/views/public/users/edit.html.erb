<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="container">
    <div class="row">
      <%= form_with model: [:public, @user], local: true , class: 'col-5 mx-auto my-5' do |f| %>
      <div class="row form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control user_name' %>
      </div>

      <div class="row form-group">
        <%= f.label :email %>
        <%= f.text_area :email, class: 'form-control user_email' %>
      </div>
      <div class="row form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
    <div class="row offset-8">
       <%= link_to "退会する", public_unsubscribe_path, class: 'btn btn-sm btn-danger' %>
    </div>

</div>
