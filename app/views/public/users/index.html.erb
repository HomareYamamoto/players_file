<div class="container">
  <div class="row">
    <%= render 'layouts/search' %>
  </div>
  <div class="row">
    <div>
      <h1 class="my-3"><strong>Users</strong></h1>
    </div>
  </div>
  <div class="row col-md-10">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-primary">
          <th><i class="fa-solid fa-users"></i>User</th>
          <th><i class="fa-regular fa-file-lines"></i>Post PLAYERS</th>
          <th>Follows</th>
          <th>Followers</th>
          <th><i class="fa-regular fa-thumbs-up"></i></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, public_user_path(user.id) %></td>
            <td><%= link_to "#{user.post_players.count}", public_user_path(user.id) %></td>
            <!--フォロー機能実装時に下記追加-->
            <td><%= link_to "#{user.followings.count}", public_user_followings_path(user.id) %></td>
            <td><%= link_to "#{user.followers.count}", public_user_followers_path(user.id) %></td>
            <td><%= link_to "Show", favorites_public_user_path(user.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto"><%= paginate @users %></div>
  </div>
</div>